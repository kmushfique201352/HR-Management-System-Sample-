@model IEnumerable<Assignement.Model.Entity.Designation>

@{
    ViewData["Title"] = "Designations";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Designations</h2>
        <a asp-action="DesignationSave" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Designation
        </a>
    </div>

    <div class="row">
        @foreach (var designation in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-dark">@designation.Name</h5>
                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="DesignationSave" asp-route-id="@designation.Id" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="DesignationDelete" asp-route-id="@designation.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this designation?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
