@model Assignement.Model.Entity.Designation

@{
    ViewData["Title"] = Model == null ? "Create Designation" : "Edit Designation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="DesignationSave" method="post">
                        @if (!string.IsNullOrEmpty(Model?.Id))
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Designation Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter designation name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Designation" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
